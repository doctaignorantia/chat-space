.wrapper

    = render 'shared/side_bar' 

    .chat-main
        .main-header
            .main-header__left-box
                %h2.main-header__left-box__current-group
                    グループ１
                %ul.main-header__left-box__member-list
                    Member :
                    %li.main-header__left-box__member-list__member
                        メッセンジャー００
            .main-header__right-box
                .submit-btn#edit
                Edit
 
        .messages
            = render partial: 'messages/message', collection: @messages

        .form
            %form.new_message#new_message
                .input-box
                    %input.input-box__text(placeholder="type a message")
                        %label.upload-label{ for:'upload-icon' }
                            %input{ type:'file', id:'upload-icon' }
                                %i.fa.fa-image
                            %span<>
            %button.form__mask(type="file")
                Send