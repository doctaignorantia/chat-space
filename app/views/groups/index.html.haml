-# .flushbox
-#     グループを作成しました

.wrapper

    = render 'shared/side_bar' 

    .chat-main
        .main-header
            .main-header__left-box
                %h2.main-header__left-box__current-group
                    グループ１
                %ul.main-header__left-box__member-list
                    Member :
                    %li.main-header__left-box__member-list__member
                        メッセンジャー０
            .main-header__right-box
                .submit-btn#edit
                Edit

        .messages
            .message
                .message__upper-info
                    %p.message__upper-info__talker
                        メッセンジャー１
                    %p.message__upper-info__date
                        日付１
                %p.message__text
                    メッセージ１
 
        .form
            %form.new_message#new_message
                .input-box
                    %input.input-box__text(placeholder="type a message")
                        %label.upload-label{ for:'upload-icon' }
                            %input{ type:'file', id:'upload-icon' }
                                %i.fa.fa-image
                            %span<>
            %button.submit#send(type="file")
                Send
